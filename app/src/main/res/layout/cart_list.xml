<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginTop="15dp"
        app:cardCornerRadius="15dp"
        app:cardUseCompatPadding="true"
        android:elevation="24dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/itemImageCart"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="2dp"
                android:src="@drawable/thakali"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.542" />

            <TextView
                android:id="@+id/itemNameCartTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Thakali"
                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@+id/priceTVCart"
                app:layout_constraintStart_toEndOf="@+id/itemImageCart"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/priceTVCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="$1200"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/itemImageCart"
                app:layout_constraintTop_toBottomOf="@+id/itemNameCartTV"
                app:layout_constraintVertical_bias="0.36" />

            <TextView
                android:id="@+id/plusTVCart"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="100dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/textviewshapw"
                android:gravity="center"
                android:text="+"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@+id/itemNameCartTV"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/minusTVCart"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/textviewshapw"
                android:gravity="center"
                android:text="-"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/plusTVCart"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/quantityCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="bottom"
                android:text="10"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@+id/minusTVCart"
                app:layout_constraintHorizontal_bias="0.44"
                app:layout_constraintStart_toEndOf="@+id/plusTVCart"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:src="@drawable/delete"
                android:id="@+id/delete_item_cartIV"
                app:layout_constraintEnd_toEndOf="@+id/minusTVCart"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@+id/plusTVCart"
                app:layout_constraintTop_toBottomOf="@+id/quantityCart" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>